{
	"version": "0.5.9",
	"name": "sitemcp",
	"description": "Fetch an entire site and use it as an MCP Server",
	"repository": "ryoppippi/sitemcp",
	"funding": "https://github.com/ryoppippi/sitemcp?sponsor=1",
	"bin": "./dist/cli.mjs",
	"files": ["dist"],
	"type": "module",
	"scripts": {
		"release": "bun lint && bun typecheck && bun test && bun run build && bumpp",
		"build": "bun -b tsdown",
		"start": "node ./dist/cli.mjs",
		"lint": "biome check .",
		"format": "biome check --write .",
		"test": "bun test",
		"typecheck": "tsgo --noEmit",
		"prepack": "bun run build && clean-pkg-json",
		"prepare": "simple-git-hooks"
	},
	"exports": {
		"./package.json": "./package.json"
	},
	"keywords": ["cli", "MCP"],
	"author": "ryoppippi",
	"license": "MIT",
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.17.2",
		"@mozilla/readability": "^0.5.0",
		"cheerio": "^1.1.2",
		"happy-dom": "^16.5.3",
		"micromatch": "^4.0.8",
		"turndown": "^7.2.0",
		"turndown-plugin-gfm": "^1.0.2",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@std/yaml": "npm:@jsr/std__yaml@^1.0.5",
		"@types/bun": "^1.2.20",
		"@types/micromatch": "^4.0.9",
		"@types/turndown": "^5.0.5",
		"@typescript/native-preview": "^7.0.0-dev.20250811.1",
		"bumpp": "^10.2.2",
		"clean-pkg-json": "^1.3.0",
		"gunshi": "^0.25.1",
		"just-pascal-case": "^3.2.0",
		"lint-staged": "^15.5.2",
		"p-queue": "^8.0.1",
		"picocolors": "^1.1.1",
		"publint": "^0.3.12",
		"simple-git-hooks": "^2.13.1",
		"tsdown": "^0.12.9",
		"ufo": "^1.6.0",
		"unplugin-unused": "^0.4.4"
	},
	"simple-git-hooks": {
		"pre-commit": "bun lint-staged"
	},
	"lint-staged": {
		"*": ["biome check --write --no-errors-on-unmatched "]
	},
	"trustedDependencies": ["@biomejs/biome", "simple-git-hooks"]
}
